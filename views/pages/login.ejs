<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<title>Login - Zayra &amp; Fernando</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="css/style-min.css" />
	<link href="https://fonts.googleapis.com/css?family=Great+Vibes|Roboto:300,400,500&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body class="bg-primary">
	
	<header class="text-light">
		<div class="container">
			<p class="pt-3"><a href="/index.php" class="text-light"><i class="fas fa-caret-square-left"></i> Go Back to Site</a></p>
			<div class="mx-auto fadeInUp text-center">
				<h1>Zayra &amp; Fernando</h1>
				<p>Admin Login</p>
			</div>
		</div>
	</header>
		
	<section class="contact-form">
		<div class="container pt-4">
		<form class="col-md-4 mx-auto" action="../admin/index.php" method="post">
			
			<div class="form-group mb-3">
				<label for="username" class="text-light pt-3">Username</label>
				<input id="username" class="form-control" type="text" name="username" placeholder="Enter username">
			</div>
			<label for="password"  class="text-light">Password</label>
			<div class="input-group mb-3">
					<input id="password" class="form-control" type="password" name="password" placeholder="Enter password">
					<div class="input-group-append">
						<div class="input-group-text">
							<input id="checkbox" class="password-checkbox form-check-input" type="checkbox" id="show">
							<label class="form-check-label" for="show" onclick="passToggle()"><i id="icon" class="toggle-icon fas fa-eye"></i></label>
						</div>
					</div>
			</div>
			
			
			<button type="submit" class="btn btn-secondary d-block mt-4 w-100"><i class="fas fa-sign-in-alt"></i> Login</button>
			
			<input type="hidden" name="action" value="login">
		</form>			
		</div>
	</section>
		
    
	
	
	<script>
		function passToggle() {
			var input = document.getElementById("password");
			var icon = document.getElementById("icon");
			var checkbox = document.getElementById("checkbox");
			
			// Toggle Checkbox
			if (checkbox.checked === true) {
				checkbox.checked = false; 
			} else {
				checkbox.checked = true;
			}
			
			
			//Check final checbox state
			if (checkbox.checked === true) {
				input.type = "text";
				icon.classList.remove("fa-eye");
				icon.classList.add("fa-eye-slash");
			} else if (checkbox.checked === false) {
				input.type = "password";
				icon.classList.remove("fa-eye-slash");
				icon.classList.add("fa-eye");
			}
		
		}
		
	</script>	    
	
</body>
</html>